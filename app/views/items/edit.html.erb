
<%= form_for :item, url: category_item_path, method: :patch do |f|  %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>


    <p>
      <%= f.label :desc %><br>
      <%= f.text_area :desc %>
    </p>

    <p>
      <%= f.label :quantity %><br>
      <%= f.text_field :quantity %>
    </p>

    <p>
      <%= f.label :unitPrice %><br>
      <%= f.text_field :unitPrice%>
    </p>

    <p>
      <%= f.label :minQty %><br>
      <%= f.text_field :minQty%>
    </p>
    <p>
      <%= f.label :maxQty %><br>
      <%= f.text_field :maxQty%>
    </p>
    <p>
      <%= f.label :sku %><br>
      <%= f.text_field :sku%>
    </p>

    <p>
      <%= f.label :image %><br>
      <%= f.file_field :image%>
    </p>
    <p>
      <%= f.label :status %><br>
      <%= f.text_area :status%>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
