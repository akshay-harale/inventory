<h1>List Of Categories</h1>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td><%= link_to 'Show', category_path(category) %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>

      </tr>
  <% end %>


</table>

<%= link_to 'Back', root_path %>

